
// 1st method: derederetso, per attribute may setter and getter na
public class Person {
    // This attribute is for ID
    private int id;
    public void setID(int newID){
        this.id = newID;
    }
    public int getID(){
        return this.id;
    }

    // This is the attribute for name
    private String name;
    public void setName(String newName){
        this.name = newName;
    }
    public String getName(){
        return this.name;
    }
    
// constructor
    public Person(){
        this.id = 0;
        this.name = "";
    }
}

// 2nd method: initialize, constructor, setter and getter
public class Person {
    
    private int id;
    private String name;
    
    // constructor
    public Person(){
        this.id = 0;
        this.name = "";
    }

  //SETTER
    public void setID(int newID){
        this.id = newID;
    }
    public void setName(String newName){
        this.name = newName;
    }

  // GETTER
    public int getID(){
        return this.id;
    }
    public String getName(){
        return this.name;
    }
    
}
